
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgmain"
    android:padding="40dp"
    android:gravity="center">
    <Button
        android:id="@+id/btn_arm"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg2"
        android:text="ส่วนแขน"
        android:textSize="30dp"
        android:onClick="clickmenubody"
        android:layout_marginBottom="15dp"
        />
    <Button
        android:id="@+id/btn_chest"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg2"
        android:text="ส่วนอก"
        android:textSize="30dp"
        android:onClick="clickcouse"
        android:layout_marginBottom="15dp"
        />
    <Button
        android:id="@+id/btn_abs"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg2"
        android:text="ส่วนท้อง"
        android:textSize="30dp"
        android:onClick="clickBMI"

        />
    <Button
        android:id="@+id/btn_leg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg2"
        android:text="ส่วนขา"
        android:textSize="30dp"
        android:onClick="clickmenubody"
        android:layout_marginBottom="15dp"
        />
    <Button
        android:id="@+id/btn_Shoulder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg2"
        android:text="ส่วนไหล่"
        android:textSize="30dp"
        android:onClick="clickcouse"
        android:layout_marginBottom="15dp"
        />
    <Button
        android:id="@+id/btn_Back"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg2"
        android:text="ส่วนหลัง"
        android:textSize="30dp"
        android:onClick="clickBMI"

        />



</LinearLayout>